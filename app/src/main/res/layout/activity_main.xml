<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/panel_off"
        android:layout_width="407dp"
        android:layout_height="336dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/panel_off" />

    <ImageView
        android:id="@+id/battary"
        android:layout_width="321dp"
        android:layout_height="242dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/battery" />

    <ImageView
        android:id="@+id/sleeppowerline"
        android:layout_width="165dp"
        android:layout_height="389dp"
        app:layout_constraintBottom_toBottomOf="@+id/battary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/panel_off"
        app:layout_constraintVertical_bias="0.804"
        app:srcCompat="@drawable/sleep_power_line" />

    <TextView
        android:id="@+id/brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness: "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/panel_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <!-- 色塊 -->
    <View
        android:id="@+id/colorBlock"
        android:layout_width="62dp"
        android:layout_height="83dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_color_block"
        app:layout_constraintBottom_toBottomOf="@+id/battary"
        app:layout_constraintStart_toStartOf="@+id/battary" />

</androidx.constraintlayout.widget.ConstraintLayout>